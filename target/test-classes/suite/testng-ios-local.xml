<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="iOS Local Suite" parallel="tests" thread-count="2">

    <!-- INITIAL RUN (PARALLEL SAFE) -->
    <test name="iOS Local Initial">
        <parameter name="platform" value="ios"/>
        <classes>
            <class name="runners.TestRunner"/>
        </classes>
    </test>

    <!-- RETRIES -->
    <test name="iOS Local Retry-1" parallel="false">
        <parameter name="platform" value="ios"/>
        <classes>
            <class name="runners.RetryRunner"/>
        </classes>
    </test>

    <test name="iOS Local Retry-2" parallel="false">
        <parameter name="platform" value="ios"/>
        <classes>
            <class name="runners.RetryRunner"/>
        </classes>
    </test>

    <test name="iOS Local Retry-3" parallel="false">
        <parameter name="platform" value="ios"/>
        <classes>
            <class name="runners.RetryRunner"/>
        </classes>
    </test>

</suite>
